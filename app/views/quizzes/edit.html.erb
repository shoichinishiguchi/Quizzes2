<div class="contents row">
  <%= form_tag("/quizzes/#{@quiz.id}", method: :patch) do %>
  <h3>
    編集する
  </h3>
  <input placeholder="Image Url" type="text" name="image" value="<%= @quiz.image %>" autofocus="true">
  <textarea cols="30" name="text" placeholder="text" rows="10"><%= @quiz.text %></textarea>
  <input type="submit" value="改題する">
  <% end %>
  <div>
    ※答えとポイントは変更できません。
  </div>
</div>
